# PostgreSQL Veritabanı Bağlantı Bilgileri
# Bu dosyayı .env olarak kopyalayıp kendi bilgilerinizle doldurun

# Veri Kaynağı Seçimi
# True = PostgreSQL veritabanı kullan (önerilen)
# False = CSV dosyaları kullan (geriye dönük uyumluluk)
USE_DATABASE=True

# Veritabanı Sunucu Bilgileri
DB_HOST=localhost
DB_PORT=5432
DB_NAME=enerji_analiz_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Bağlantı Havuzu Ayarları (Opsiyonel)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Uygulama Ayarları
DEBUG_MODE=False
